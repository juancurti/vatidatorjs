{
  "compilerOptions": {
    "module": "AMD",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts", "tests/*.ts"]
}